<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/img_shape_1"
                android:id="@+id/rl">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RLWTN0014"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:paddingLeft="10dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tvTenderNumber"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_below="@id/rl">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Name"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/rl_orange"/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:fontFamily="@font/poppins_regular"
                    android:text="Name"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/rl_orange"/>

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:fontFamily="@font/poppins_regular"
                    android:text="Name"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="5dp"
                    android:drawableTint="@color/rl_orange"/>

                <TextView
                    android:id="@+id/tvOccupation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:fontFamily="@font/poppins_regular"
                    android:text="Name"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/repair_service_icon"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"
                    android:drawableTint="@color/rl_orange"/>

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:fontFamily="@font/poppins_regular"
                    android:text="Name"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/baseline_apartment_24"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="5dp"
                    android:drawableTint="@color/rl_orange"

                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:fontFamily="@font/poppins_regular"
                    android:text="Name"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"
                    android:drawableTint="@color/rl_orange"/>

                <TextView
                    android:id="@+id/tvExpiredDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Name"
                    android:textSize="12sp"
                    android:textColor="@color/red"
                    android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"
                    android:drawableTint="@color/red"/>

                <TextView
                    android:id="@+id/tvViewMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableRight="@drawable/baseline_keyboard_double_arrow_right_24"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/rl_blue"
                    android:fontFamily="@font/poppins_regular"
                    android:text="View More"
                    android:gravity="right"
                    android:textColor="@color/rl_blue"
                    android:textSize="12sp"
                    />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>